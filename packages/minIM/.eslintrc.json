{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["@typescript-eslint", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "ignorePatterns": [
    "dist/",
    "types/",
    "node_modules/",
    "webpack.config.js",
    "messages.ts"
  ],
  "overrides": [
    {
      "files": ["src/**/*.ts"],
      "excludedFiles": "*.test.ts"
    }
  ]
}
